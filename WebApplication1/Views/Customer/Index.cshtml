@{

    @model List<WebApplication1.Models.Customer>

    <h2>Bank Customers</h2>
    <table>
        <thead>
            <tr>

                <th>name</th>
                <th>email</th>
                <th>phone</th>
                <th>country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.name</td>
                    <td>@customer.email</td>
                    <td>@customer.phone</td>
                    <td>@customer.country</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@customer.id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
        <a class="btn btn-success" asp-asp-controller="Customer" asp-action="Register">Add Customer</a>
        
    </table>

}
